@page "/"
@page "/{FolderName}"
@page "/{FolderName}/{MdFileName}"

@using System.Diagnostics

@if (MdFileName != null)
{
	<Markdown FromFile="@(MdFileName+".html")" />
}

@code {
	[Parameter]
	public string MdFileName { get; set; }
	[Parameter]
	public string FolderName { get; set; }

	protected override void OnInitialized()
	{
		MdFileName = (!string.IsNullOrEmpty(MdFileName) ? "Markdown/"+FolderName+"/" + MdFileName + ".md" : "Markdown/introduction.md");
	}
}
